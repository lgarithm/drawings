#!/bin/sh

set -e

cd $(dirname $0)

ROOT=$(pwd)
BUILD_DIR=$(pwd)/build
mkdir -p $BUILD_DIR
cd $BUILD_DIR

CMAKE_FLAGS="-DCMAKE_EXPORT_COMPILE_COMMANDS=1 -DCMAKE_BUILD_TYPE=Release"

cmake $CMAKE_FLAGS $ROOT



